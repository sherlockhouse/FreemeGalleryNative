<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <!--Modified by Linguanrong for Gallery new style, 2014-02-14-->
    <TextView
        android:id="@+id/selection_menu"
        style="?android:attr/actionButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1"
        android:divider="?android:attr/listDividerAlertDialog"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:requiresFadingEdge="none"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="?android:attr/textColorPrimaryInverse"/>

    <CheckBox
        android:id="@+id/selection_all"
        style="@style/SelectAllCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="15dip"
        android:gravity="end|center_vertical"/>
    <!--Linguanrong-->

    <!-- Added by Linguanrong for story album, 2015-6-27 -->
    <TextView
        android:id="@+id/selection_confirm"
        style="?android:attr/actionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/ok"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:visibility="gone"/>
