<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_dialog_width"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/common_dialog_width"
    android:orientation="vertical"
    android:background="@drawable/alert_dialog_background" >
	
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_dialog_title_height"
        android:gravity="center"
        android:textColor="@color/common_dialog_title_tcolor"
        android:textSize="@dimen/common_dialog_title_tsize"
        android:background="@drawable/alert_dialog_title_bar"
        android:visibility="gone" />
  
    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_dialog_message_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_dialog_text_paddingLeft"
        android:paddingRight="@dimen/common_dialog_text_paddingRight"
        android:singleLine="false"
        android:textColor="@color/common_dialog_message_tcolor"
        android:textSize="@dimen/common_dialog_message_tsize"
        android:visibility="gone" />
    
     <FrameLayout android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
     </FrameLayout>
     
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_dialog_bottom_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/common_dialog_bottom_margin"
            android:layout_weight="1.0"
            android:background="@drawable/alert_dialog_left_button"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/common_dialog_button_tcolor"
            android:textSize="@dimen/common_dialog_message_tsize" />
  
        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/common_dialog_bottom_margin"
            android:layout_marginTop="@dimen/common_dialog_bottom_margin"
            android:layout_weight="1.0"
            android:background="@drawable/alert_dialog_right_button"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/common_dialog_button_tcolor"
            android:textSize="@dimen/common_dialog_message_tsize" />
    </LinearLayout>

</LinearLayout>