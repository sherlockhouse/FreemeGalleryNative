<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommunityTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/theme_color</item>
        <item name="android:colorPrimaryDark">@color/theme_color</item>
        <item name="android:colorAccent">@color/theme_color</item>
        <item name="android:actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
    </style>

    <style name="CommunityActivityTheme" parent="CommunityTheme">
        <item name="android:actionBarStyle">@style/Community_ActionBarStyle</item>
    </style>

    <style name="Community_ActionBarStyle" parent="android:style/Widget.Material.Light.ActionBar.Solid">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>

    <style name="ActionMenuTextAppearance" parent="android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Medium" parent="android:style/TextAppearance.Material.Medium">
    </style>

    <style name="Theme.Light" parent="android:style/Theme.Material.Light">
    </style>

    <style name="Theme.Dialog" parent="android:style/Theme.Material.Light.Dialog">
    </style>

    <style name="ProgressDialog" parent="android:style/Theme.Material.Light.Dialog.NoActionBar">
    </style>

    <!--Added by tyd Linguanrong for droi push, 16-3-8-->
    <style name="TextAppearance.Notification" parent="@android:style/TextAppearance.Material.Notification">
    </style>

    <style name="TextAppearance.Notification.Title" parent="@android:style/TextAppearance.Material.Notification.Title">
    </style>
