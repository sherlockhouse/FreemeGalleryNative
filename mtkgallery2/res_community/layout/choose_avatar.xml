<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center"
              android:minWidth="360dp"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/global_margin_medium"
              android:paddingTop="@dimen/global_margin_medium">

    <TextView
        android:id="@+id/choose_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/btn_choose_album"
        android:gravity="center"
        android:text="@string/local_album"
        android:textColor="@color/avatar_text_color"
        android:textSize="@dimen/avatar_text_size"/>

    <TextView
        android:id="@+id/choose_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/btn_choose_camera"
        android:gravity="center"
        android:text="@string/take_photo"
        android:textColor="@color/avatar_text_color"
        android:textSize="@dimen/avatar_text_size"/>

</LinearLayout>