<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="@dimen/global_padding_small">

    <com.freeme.community.view.CircleImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/user_icon_size"
        android:layout_height="@dimen/user_icon_size"
        android:contentDescription="@null"
        android:src="@drawable/default_user_icon"
        app:border_color="@color/border_color"
        app:border_width="@dimen/border_width"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/global_margin_medium"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/user_name"
            android:textColor="@color/user_name_text_color"
            android:textSize="@dimen/user_name_text_size"/>

        <TextView
            android:id="@+id/user_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_date"
            android:textColor="@color/user_date_text_color"
            android:textSize="@dimen/user_date_text_size"/>

    </LinearLayout>

</LinearLayout>
