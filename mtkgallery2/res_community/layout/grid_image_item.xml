<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/image_item_bg"
              android:orientation="vertical">

    <com.freeme.community.view.SquareImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:paddingLeft="@dimen/global_margin_small"
        android:paddingRight="@dimen/global_margin_small"
        android:paddingTop="@dimen/global_margin_small"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/thumbs_comment_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/thumbs_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/thumbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/global_margin_small"
                android:drawableStart="@drawable/ic_thumbs_latest"
                android:textColor="@color/latest_text_color"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thumbs_divider_height"
            android:background="@drawable/thumbs_comment_divider"
            android:contentDescription="@null"/>

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/global_margin_small"
                android:drawableStart="@drawable/ic_comment_latest"
                android:textColor="@color/latest_text_color"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
