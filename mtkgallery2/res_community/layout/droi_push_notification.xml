<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/droi_push_item_height">

    <ImageView
        android:id="@+id/user_thumbnail"
        android:layout_width="@dimen/droi_push_icon_size"
        android:layout_height="@dimen/droi_push_icon_size"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:padding="@dimen/droi_push_icon_padding"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher_gallery"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/droi_push_item_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Notification.Title"/>

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Notification"/>

    </LinearLayout>

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/droi_push_item_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/global_margin_medium"
        android:paddingTop="@dimen/droi_push_icon_padding"
        android:text="@string/app_name"/>

</LinearLayout>
