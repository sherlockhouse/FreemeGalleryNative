<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ec_page_body"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.freeme.elementscenter.dc.ui.TabWidget
        android:id="@+id/tab_widget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabwidget_height"
        android:background="@drawable/tabwidget_bg"
        android:orientation="vertical"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_content_pager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"/>

</LinearLayout>