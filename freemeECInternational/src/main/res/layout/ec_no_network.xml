<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ec_no_network_prompt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" >

    <FrameLayout
        android:layout_width="@dimen/ec_no_network_prompt_w"
        android:layout_height="@dimen/ec_no_network_prompt_h"
        android:layout_gravity="center" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ec_no_network_img_h"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ec_no_networking" />

        <Button
            android:id="@+id/reload"
            android:layout_width="@dimen/ec_no_network_btn_w"
            android:layout_height="@dimen/ec_no_network_btn_h"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/ec_no_network_btn"
            android:text="@string/ec_reload"
            android:textColor="@drawable/reload_text" />
    </FrameLayout>

</FrameLayout>