<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/tag_min_width">

    <TextView
        android:id="@+id/tag_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dip"
        android:background="@drawable/tag_text_bg"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:maxWidth="@dimen/tag_label_max_width"
        android:textColor="@color/tag_text_color"/>

    <com.freeme.community.view.CircleImageView
        android:id="@+id/tag_img"
        android:layout_width="@dimen/tag_user_icon_size"
        android:layout_height="@dimen/tag_user_icon_size"
        android:layout_marginBottom="6dip"
        android:background="@drawable/default_user_icon"
        android:contentDescription="@null"
        app:border_color="@color/border_color"
        app:border_width="@dimen/tag_border_width"/>


</RelativeLayout>