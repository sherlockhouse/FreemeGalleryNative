<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/main_bg">

    <include layout="@layout/progress"/>

    <include layout="@layout/network_unavailable"/>

    <com.freeme.community.view.PullToRefreshView
        android:id="@+id/pullRefreshView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/top_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/global_margin_tiny"
            android:layout_marginStart="@dimen/global_margin_tiny"
            android:layout_marginTop="1dip"
            android:divider="@color/transparent"
            android:dividerHeight="@dimen/global_margin_tiny"/>

    </com.freeme.community.view.PullToRefreshView>

    <include layout="@layout/system_err_view"/>
</FrameLayout>

