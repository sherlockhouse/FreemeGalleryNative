<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_item_bg"
                android:paddingEnd="@dimen/global_margin_small"
                android:paddingStart="@dimen/global_margin_small">

    <include
        android:id="@+id/user_title"
        layout="@layout/user_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.freeme.community.view.SquareImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_title"
        android:contentDescription="@null"
        android:scaleType="fitXY"/>

    <!--<include
        layout="@layout/thumbs_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_alignEnd="@id/image" />-->

    <include
        layout="@layout/user_discrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"/>

</RelativeLayout>
