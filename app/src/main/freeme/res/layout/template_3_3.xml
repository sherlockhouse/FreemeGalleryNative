<!--
    Warning: the following dimensions must be used pixels, 
    because of the final image size is intrinsic 2160x2880 after jigsawing,
    all the dimension base on it.
    the same as: all template layouts.
-->
<RelativeLayout style="@style/templateStyle"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <com.freeme.jigsaw.ui.JigsawTile
        style="@style/template_child_frame"
        android:layout_width="1200px"
        android:layout_height="1600px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="300px"
        android:pivotX="50%"
        android:pivotY="50%"
        android:rotation="-15"/>

    <com.freeme.jigsaw.ui.JigsawTile
        style="@style/template_child_frame"
        android:layout_width="1200px"
        android:layout_height="1600px"
        android:layout_marginLeft="600px"
        android:layout_marginTop="700px"
        android:pivotX="50%"
        android:pivotY="50%"
        android:rotation="15"/>

    <com.freeme.jigsaw.ui.JigsawTile
        style="@style/template_child_frame"
        android:layout_width="1800px"
        android:layout_height="1600px"
        android:layout_marginLeft="200px"
        android:layout_marginTop="1000px"
        android:pivotX="50%"
        android:pivotY="50%"
        android:rotation="5"/>

</RelativeLayout>