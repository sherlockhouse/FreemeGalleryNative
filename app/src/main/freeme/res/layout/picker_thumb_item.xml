<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="@dimen/picker_selected_thumb_panel_w"
             android:layout_height="@dimen/picker_selected_thumb_panel_h"
             android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/selected_thumb"
        android:layout_width="@dimen/picker_selected_thumb_w"
        android:layout_height="@dimen/picker_selected_thumb_h"
        android:layout_gravity="bottom|center"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/selected_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="@drawable/ic_selected_remove"/>

</FrameLayout>
